<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="StaticLeague"
                type="com.surya.livescoreleague.data.models.StaticLeague"/>

    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginVertical="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="9dp"
                app:cardElevation="3dp"
                android:background="@android:color/darker_gray"
                android:padding="6dp"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginHorizontal="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:layout_margin="7dp"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp">

                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imgLiga"
                        android:src="@drawable/ic_launcher_background" tools:layout_editor_absoluteY="-8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        tools:ignore="MissingConstraints"/>

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@{StaticLeague.name}"
                          android:id="@+id/nameLeague"
                          android:padding="5dp"
                          android:textAlignment="center"
                          android:textSize="15sp"
                          android:textStyle="bold"
                          android:layout_centerInParent="true"
                          tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toBottomOf="@+id/imgLiga"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>
