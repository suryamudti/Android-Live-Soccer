<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:shimmer="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="player"
                type="com.surya.livescoreleague.data.db.entities.Player"/>
    </data>

    <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_player"
                    shimmer:auto_start="true"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    shimmer:duration="800">

                <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <LinearLayout
                            android:background="@color/background"
                            android:layout_width="200dp"
                            android:layout_height="200dp">

                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="50dp"
                            android:background="@color/background"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="50dp"
                            android:background="@color/background"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="50dp"
                            android:background="@color/background"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="50dp"
                            android:background="@color/background"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="50dp"
                            android:background="@color/background"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                    </LinearLayout>

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        android:id="@+id/imgPlayer"
                        android:layout_gravity="center"/>
                <TextView
                        android:id="@+id/txtNamePlayer"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="@{player.strPlayer}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/txtNameClub"
                        android:textSize="15sp"
                        android:text="@{player.strTeam}"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="@{player.strDescriptionEN}"
                        android:id="@+id/txtDescPlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>