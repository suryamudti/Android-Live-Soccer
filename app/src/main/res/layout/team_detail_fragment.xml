<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:shimmer="http://schemas.android.com/apk/res-auto">


    <data>
        <variable
                name="team"
                type="com.surya.livescoreleague.data.db.entities.Teams"/>
    </data>

    <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

            <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_teams_detail"
                    shimmer:auto_start="true"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    shimmer:duration="800">

                <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <LinearLayout
                            android:background="@color/background"
                            android:layout_width="200dp"
                            android:layout_height="200dp">

                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="50dp"
                            android:background="@color/background"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="50dp"
                            android:background="@color/background"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="50dp"
                            android:background="@color/background"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="50dp"
                            android:background="@color/background"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="50dp"
                            android:background="@color/background"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                    </LinearLayout>

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <LinearLayout
                    android:id="@+id/linearDetailTeams"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/imgTeamDetail"
                        android:layout_margin="10dp"
                        android:layout_gravity="center|top"
                        android:src="@drawable/football"
                        android:layout_width="200dp"
                        android:layout_height="200dp"/>
                <TextView
                        android:id="@+id/txtNameTeam"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:text="@{team.strTeam}"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/txtStadiumTeam"
                        android:text="@{team.strStadium}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/txtDescTeam"
                        android:text="@{team.strDescriptionEN}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</layout>